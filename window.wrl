#horizontal beam
DEF beamTop Transform {
    translation 0 0 0
    children [
        Shape {
            geometry Box {
                size 17 .5 .5
            }
        }
    ]
}
Transform {
    translation 0 -7 0 
    children [
        USE beamTop
    ]
}
Transform {
    translation 0 -21 0 
    children [
        USE beamTop
    ]
}

